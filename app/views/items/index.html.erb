<h1>Inventory</h1>


<%= search_form_for @search do |f| %>
  <%= f.label :name_cont %>
  <%= f.text_field :name_cont %>
  <%= f.submit %>
<% end %>

<table  class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th><%= sort_link @search, :name, "Name" %></th>
    
      <th>Unit</th>
      <th>Items required</th>
      <th>Items on hand</th>
      <th><%=  sort_link @search, :location, "Location" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= best_in_place item, :name %></td>
        <td><%= best_in_place item, :unit %></td>
        <td><%= best_in_place item, :num_required %></td>
        <td><%= best_in_place item, :num_onhand %></td>
        <td><%= best_in_place item, :location_id, :type => :select, :collection => Location::list_location_options %></td>
        <td><%= link_to raw("<i class=\"icon-trash \"> </i>"), item, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
<%= link_to 'New Location', new_location_path %><p>
<%= link_to 'Shopping List', new_purchase_path %>
