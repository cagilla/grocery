<h1>Listing locations</h1>

<table class="table table-striped table-bordered" >
  <thead>
    <tr>
    <th>Name</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @locations.each do |location| %>
    <tr>
      <td><%= best_in_place location, :name %></td>
      <td><%= link_to raw("<i class=\"icon-trash \"> </i>"), location, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br />

<%= link_to 'New Location', new_location_path %>
